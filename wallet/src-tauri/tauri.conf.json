{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "QuantumHarmony Wallet",
  "version": "0.1.0",
  "identifier": "com.quantumharmony.wallet",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:8081",
    "frontendDist": "../static"
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "resources": [],
    "externalBin": []
  },
  "app": {
    "windows": [
      {
        "title": "QuantumHarmony Operator Dashboard",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self' http://localhost:* ws://localhost:*"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.quantumharmony.io/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "UPDATE_PUBKEY_PLACEHOLDER"
    }
  }
}
