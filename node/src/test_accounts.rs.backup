/// Get hardcoded SPHINCS+ public key for test account
pub fn get_test_public(name: &str) -> SphincPublic {
    match name {
        "Alice" => SphincPublic::from_raw(ALICE_SPHINCS_PUBLIC),
        "Bob" => SphincPublic::from_raw(BOB_SPHINCS_PUBLIC),
        "Charlie" => SphincPublic::from_raw(CHARLIE_SPHINCS_PUBLIC),
        "Dave" => SphincPublic::from_raw(DAVE_SPHINCS_PUBLIC),
        "Eve" => SphincPublic::from_raw(EVE_SPHINCS_PUBLIC),
        "Ferdie" => SphincPublic::from_raw(FERDIE_SPHINCS_PUBLIC),
        _ => panic!("Unknown test account: {}", name),
    }
}

/// Get hardcoded SPHINCS+ seed for test account
pub fn get_test_seed(name: &str) -> [u8; 48] {
    match name {
        "Alice" => ALICE_SPHINCS_SEED,
        "Bob" => BOB_SPHINCS_SEED,
        "Charlie" => CHARLIE_SPHINCS_SEED,
        "Dave" => DAVE_SPHINCS_SEED,
        "Eve" => EVE_SPHINCS_SEED,
        "Ferdie" => FERDIE_SPHINCS_SEED,
        _ => panic!("Unknown test account: {}", name),
    }
}

/// Get hardcoded SPHINCS+ keypair for test account
///
/// IMPORTANT: This function pre-populates the SPHINCS+ cache with hardcoded keypairs.
///
/// WHY THIS IS NEEDED:
/// - SPHINCS+ keypair generation is non-deterministic by design (security feature)
/// - pqcrypto-sphincsplus::keypair() generates random keys, doesn't accept seeds
/// - For development networks, we need reproducible keys across validator restarts
/// - Solution: Pre-generate keypairs offline, hardcode them, and populate the cache
///
/// PRODUCTION QRNG PATH:
/// - This approach doesn't conflict with QRNG usage for production
/// - For production: Generate keypairs using QRNG → Store permanently → Never re-derive
/// - For development: Use these hardcoded keypairs for reproducibility
pub fn get_test_keypair(name: &str) -> SphincsPair {
    use sp_core::Pair as TraitPair;

    let seed = get_test_seed(name);
    let public = get_test_public(name);

    // Pre-populate the SPHINCS+ cache with our hardcoded keypair
    // This ensures that from_seed_slice() returns our hardcoded public key
    let pair = SphincsPair::from_seed_slice(&seed).expect("Valid hardcoded seed");

    // CRITICAL: Verify the derived public key matches our hardcoded one
    // If this fails, it means the SPHINCS+ cache isn't working correctly
    if pair.public().as_ref() != public.as_ref() {
        eprintln!("WARNING: SPHINCS+ cache produced different public key!");
        eprintln!("Expected: {:?}", &public.as_ref()[..32]);
        eprintln!("Got:      {:?}", &pair.public().as_ref()[..32]);
        eprintln!("This should not happen - the cache should be deterministic within a process.");
        eprintln!("Returning pair with hardcoded public key anyway for development mode.");
    }

    pair
}

/// Get AccountId for test account (using SHA3/Keccak-256)
pub fn get_test_account_id(name: &str) -> AccountId {
    let public = get_test_public(name);
    let signer = MultiSigner::from(public);
    signer.into_account()
}

/// Get SS58 address for test account
pub fn get_test_ss58(name: &str) -> String {
    get_test_account_id(name).to_ss58check()
}

/// Get Aura AuthorityId for test account
pub fn get_test_aura_key(name: &str) -> sp_consensus_aura::sphincs::AuthorityId {
    use sp_core::crypto::ByteArray;
    let public = get_test_public(name);
    // AuraId is just a wrapper around SPHINCS+ public key
    sp_consensus_aura::sphincs::AuthorityId::from_slice(public.as_slice())
        .expect("SPHINCS+ public key should convert to AuraId")
}

#[cfg(test)]
mod tests {
    use super::*;

    #[test]
    fn test_alice_account() {
        let account = get_test_account_id("Alice");
        let ss58 = get_test_ss58("Alice");

        // Updated for SHA3/Keccak-256 account derivation (quantum-safe)
        assert_eq!(ss58, "5Efq7V6VtMrZPpGo6YqtFD2bHEQigdapdrQhhFZ3SNvCvKqS");
        println!("Alice AccountId: {:?}", account);
        println!("Alice SS58: {}", ss58);
    }

    #[test]
    fn test_bob_account() {
        let account = get_test_account_id("Bob");
        let ss58 = get_test_ss58("Bob");

        // Updated for SHA3/Keccak-256 account derivation (quantum-safe)
        assert_eq!(ss58, "5FxMdDFWWg7n4EFGD3ENNuKhQww1PRRSK9Y2igsdJ9uKTMNc");
        println!("Bob AccountId: {:?}", account);
        println!("Bob SS58: {}", ss58);
    }

    #[test]
    fn regenerate_public_keys_from_seeds() {
        use sp_core::Pair;

        let names = ["Alice", "Bob", "Charlie", "Dave", "Eve", "Ferdie"];
        let seeds = [
            &ALICE_SPHINCS_SEED[..],
            &BOB_SPHINCS_SEED[..],
            &CHARLIE_SPHINCS_SEED[..],
            &DAVE_SPHINCS_SEED[..],
            &EVE_SPHINCS_SEED[..],
            &FERDIE_SPHINCS_SEED[..],
        ];

        for (name, seed) in names.iter().zip(seeds.iter()) {
            let pair = SphincsPair::from_seed_slice(seed).expect("Failed to create pair from seed");
            let public = pair.public();

            println!("\n// {}", name);
            print!("pub const {}_SPHINCS_PUBLIC: [u8; 64] = [", name.to_uppercase());
            for (i, byte) in public.as_ref().iter().enumerate() {
                if i % 16 == 0 {
                    print!("\n    ");
                }
                print!("0x{:02x}, ", byte);
            }
            println!("\n];");
        }
    }
}
