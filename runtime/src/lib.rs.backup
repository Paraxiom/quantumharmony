pub struct AlithAccount;

pub type EnsureAlith = EnsureOneOf<AccountId, AlithAccount>;
impl EnsureOrigin<RuntimeOrigin> for AlithAccount {
    type Success = AccountId32;
    fn try_origin(o: RuntimeOrigin) -> Result<AccountId32, RuntimeOrigin> {
        if let Ok(who) =
            <frame_system::EnsureSigned<AccountId> as frame_support::traits::EnsureOrigin<
                RuntimeOrigin,
            >>::ensure_origin(o.clone())
        {
            // Convert AccountId20 (20 bytes) to AccountId32 (32 bytes) by zero-padding
            let mut account_id32_bytes = [0u8; 32];
            account_id32_bytes[..20].copy_from_slice(<AccountId20 as AsRef<[u8]>>::as_ref(&who));
            let account_id32 = AccountId32::from(account_id32_bytes);

            // Correctly pad the hex string to 32 bytes (64 hex characters)
            let expected_account_id32 = AccountId32::from(hex!(
                "f24FF3a9CF04c71Dbc94D0b566f7A27B94566cac000000000000000000000000"
            ));

            if account_id32 == expected_account_id32 {
                Ok(account_id32)
            } else {
                Err(o)
            }
        } else {
            Err(o)
        }
    }
}

