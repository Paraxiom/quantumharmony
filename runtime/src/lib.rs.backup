    fn from(val: ValidatorId) -> Self {
        let mut bytes = [0u8; 32];
        let account_bytes: &[u8] = val.0.as_ref();
        bytes[0..20].copy_from_slice(&account_bytes[0..20]);
        AccountId32::from(bytes)
    }
